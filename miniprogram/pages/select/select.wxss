/* miniprogram/pages/select/select.wxss */

.container {
  display: flex;
  flex-direction: column;
  width:100%;
  height: 100%;
  position: absolute;
  justify-content: space-around;
  align-items: center;
}

.view {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: cadetblue;
  height: 30%;
  width: 70%;
  border-radius: 5%;
}

.text {
  font-size: 200%;
  font-weight: 2000;
}

.page__hd {
  padding: 40px;
}
.page__bd {
  padding-bottom: 40px;
}
.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}


.page__ft{
  padding-bottom: 10px;
  text-align: center;
}


.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}


.page__desc {
  margin-top: 5px;
  color: #888888;
  text-align: left;
  font-size: 14px;
}